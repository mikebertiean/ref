<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/event_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/event_time_left"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="27"
            android:layout_margin="6dp"/>

        <ImageView
            android:id="@+id/event_cell_action_left"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="6dp"
            android:src="@drawable/cast_abc_scrubber_control_off_mtrl_alpha"
            android:layout_toEndOf="@id/event_time_left" />

        <TextView
            android:id="@+id/event_text_left"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/event_cell_action_left"
            android:gravity="center"
            android:text="Yellow Card"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/event_time_right"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="13"
            android:layout_margin="6dp"/>

        <ImageView
            android:id="@+id/event_cell_action_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="6dp"
            android:src="@drawable/cast_abc_scrubber_control_off_mtrl_alpha"
            android:layout_toStartOf="@id/event_time_right"/>

        <TextView
            android:id="@+id/event_text_right"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Goal!"
            android:layout_toLeftOf="@id/event_cell_action_right"
            android:gravity="center"
            android:layout_margin="6dp"/>

    </RelativeLayout>

</RelativeLayout>